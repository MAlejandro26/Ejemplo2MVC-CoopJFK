@using CoopJFK.Models
@model LoginViewModel
@{
    ViewBag.Title = "Cooperativa John F. Kennedy";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Cooperativa John F. Kennedy</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/favicon.ico" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/vendor/bootstrap/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css" type="text/css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css" type="text/css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/vendor/animate/animate.css" type="text/css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/vendor/css-hamburgers/hamburgers.min.css" type="text/css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/vendor/animsition/css/animsition.min.css" type="text/css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/vendor/select2/select2.min.css" type="text/css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/vendor/daterangepicker/daterangepicker.css" type="text/css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/css/util.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/Login/css/main.css" type="text/css" rel="stylesheet" />
    <!--===============================================================================================-->


</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-t-50 p-b-90">
                @using (Html.BeginForm("Login", "Access", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form flex-sb flex-w", role = "form" }))
                {
                    
                    <span class="login100-form-title p-b-51">
                        COOP.JFK
                    </span>
                    <div class="wrap-input100 validate-input m-b-16" data-validate="El usuario es requerido">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "input100", @autofocus = "autofocus", @placeholder = "Usuario" })
                        @*@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })*@
                        @*<input class="input100" type="text" name="username" placeholder="Usuario">*@
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input m-b-16" data-validate="La contraseña es requerida">
                        @Html.PasswordFor(m => m.Password, new { @class = "input100", @placeholder = "Contraseña" })
                        @*<input class="input100" type="password" name="passsdf" placeholder="Contraseña">*@
                        <span class="focus-input100"></span>
                    </div>
                    @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                    <br>
                    <div class="container-login100-form-btn m-t-17">
                        <input type="submit" value="Iniciar sesión" class="login100-form-btn" />
                    </div>
                }
            </div>
        </div>
    </div>
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                $.notify({
                    icon: 'fa fa-user',
                    message: "@ViewBag.Message",

                },{
                        type: 'warning'
                    });
            }
        </script>
    }
    <div id="dropDownSelect1"></div>
    <!--===============================================================================================-->
    <script src="~/Content/Login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/Login/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/js/bootstrap-notify.js"></script>
    <script src="~/Content/Login/js/main.js"></script>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}