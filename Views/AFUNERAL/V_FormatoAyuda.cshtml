@model CoopJFK.Models.AYUDA_FUNERAL

@{
    ViewBag.Title = "Formato Entrega de Ayuda Funeral";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="white-box">
                @using (Html.BeginForm())
                {


                    <div class="form-horizontal">
                        <h4>AYUDA_FUNERAL</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.SOCIO, "SOCIO", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">

                                @Html.TextBoxFor(model => model.SOCIO, new { @class = "form-control", placeholder = "Aqui #socio", required = "required" })
                                @Html.ValidationMessageFor(model => model.SOCIO, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(model => model.APLICADO, "Estado")
                                @{
                                    List<SelectListItem> _estado = new List<SelectListItem>();
                                    _estado.Add(new SelectListItem { Text = "Pagado", Value = "S" });
                                    _estado.Add(new SelectListItem { Text = "No Pagado", Value = "N" });

                                }
                                @Html.DropDownListFor(model => model.APLICADO, _estado, "--Seleccione--", new { @class = "form-control", @readonly = "true" })
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-4 col-md-10">

                                    <input id="submit" type="button" value="Generar" class="btn btn-info" />
                                </div>
                            </div>
                            <div id="containerdetalle"></div>





                        </div>
                        


                    </div>
                 }
                </div>
    </div>
</div>
      </div>

            