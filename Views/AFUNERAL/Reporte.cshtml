@model CoopJFK.Models.ViewModels.Hist_AportacionesViewModels
<h2>PagosAyudaFuneral</h2>

<script src="~/Scripts/select2.min.js"></script>
<link href="~/Content/select2/css/select2.min.css" rel="stylesheet" />

<script src="~/Scripts/mask.js"></script>
<div class="row bg-title">
	<div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
		<h4 class="page-title"></h4>
	</div>
	<div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
		<ol class="breadcrumb">
			<li><a href="#">Sistema de Gestión de Crédito</a></li>
			<li>Aportaciones</li>
			<li class="active">Historial de Aportaciones</li>
		</ol>
	</div>
	<!-- /.col-lg-12 -->
</div>
<div class="container">
	<input type="button" value="Reporte Control Pagos" class="btn btn-info" onclick="ocultarReporte1(1)" />
	<input type="button" value="Reporte Ayuda Entregada" class="btn btn-info" onclick="ocultarReporte1(2)" />
	<div class="row" id="Reporte1">
		<div class="col-md-12">
			<div class="white-box">
				@using (Html.BeginForm("PagosAyudaFuneral", "AFUNERAL", null, FormMethod.Post, null))
				{
					<div class="form-horizontal">
						<h4>Pagos</h4>
						<hr />
						<div class="form-group">
							<div class="col-md-2">
								@Html.Label("Pp Inicio")
								@Html.TextBoxFor(model => model.PpInicio, new { @class = "form-control", required = "required" })
								@Html.ValidationMessageFor(model => model.PpInicio, "", new { @class = "text-danger" })
								@*<input type="text" placeholder="" data-mask="99/9999" class="form-control" id="PpInicio">*@
								<span class="error">El periodo de pago es Obligatorio</span>
							</div>
							<div class="col-md-2">
								@Html.Label("Pp Fin")
								@Html.TextBoxFor(model => model.PpFin, new { @class = "form-control", required = "required" })
								@Html.ValidationMessageFor(model => model.PpFin, "", new { @class = "text-danger" })
								@*<input type="text" placeholder="" data-mask="99/9999" class="form-control" id="PpFin">*@
								<span class="error">El periodo de pago es Obligatorio</span>
							</div>
							<div class="col-md-2">
								@Html.Label("Tipo Pago")
								@Html.DropDownList("pago", null, "--Seleccione--", htmlAttributes: new { @class = "form-control", required = "required" })
								@Html.ValidationMessageFor(model => model.pago, "", new { @class = "text-danger" })
							</div>
							<div class="col-md-2">
								@Html.Label("Estado Ayuda")
								@Html.DropDownList("Actividad", null, "--Seleccione--", htmlAttributes: new { @class = "form-control", required = "required" })
								@Html.ValidationMessageFor(model => model.Actividad, "", new { @class = "text-danger" })
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-offset-4 col-md-10">

								<input type="submit" value="Reporte" class="btn btn-info" /> | @Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-warning" })

							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>

<div class="container" >
	<div class="row" id="Reporte2">
		<div class="col-md-12">
			<div class="white-box">
				@using (Html.BeginForm("AyudaFuneralEntregada", "AFUNERAL", null, FormMethod.Post, null))
				{
					<div class="form-horizontal">
						<h4>Pagos</h4>
						<hr />
						<div class="form-group">
							<div class="col-md-2">
								@Html.Label("Periodo Inicio")
								@Html.TextBoxFor(model => model.PpInicio, new { @class = "form-control", required = "required" })
								@Html.ValidationMessageFor(model => model.PpInicio, "", new { @class = "text-danger" })
								@*<input type="text" placeholder="" data-mask="99/9999" class="form-control" id="PpInicio">*@
								<span class="error">El periodo de pago es Obligatorio</span>
							</div>
							<div class="col-md-2">
								@Html.Label("Tipo Pago")
								@Html.DropDownList("pago", null, "--Seleccione--", htmlAttributes: new { @class = "form-control", required = "required" })
								@Html.ValidationMessageFor(model => model.pago, "", new { @class = "text-danger" })
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-offset-4 col-md-10">

								<input type="submit" value="Reporte" class="btn btn-info" /> | @Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-warning" })

							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>

<script>
	$(document).ready(function () {
		document.getElementById("Reporte1").style.display = "block";
		document.getElementById("Reporte2").style.display = "none";
		$("#socio").select2({
			placeholder: "Seleccione al socio",
			allowClear: true,


		});
	});

	function ocultarReporte1(a) {
		if (a == 1) {
			document.getElementById("Reporte1").style.display = "block";
			document.getElementById("Reporte2").style.display = "none";
		}
		else {
			document.getElementById("Reporte2").style.display = "block";
			document.getElementById("Reporte1").style.display = "none";
		}
	};
</script>

