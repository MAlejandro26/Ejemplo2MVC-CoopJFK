@model CoopJFK.Models.PRESTAMO_CONFIG

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>
<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">@ViewBag.Title</h4>
    </div>
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <ol class="breadcrumb">
            <li><a href="#">Sistema de Gestión de Crédito</a></li>
            <li>Administración</li>
            <li class="active">Configuración de Prestamos</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-md-12">
        <div class="white-box">
            @using (Html.BeginForm())
            {

                <div class="form-horizontal">
                    <h4>Configuración</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.FECHA_CREACION)
                    @Html.HiddenFor(model => model.USUARIO_CREACION)

                    <div class="form-group">
                        @Html.LabelFor(model => model.ID, "Id", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TIPO_PRESTAMO, "Tipo de Prestamo", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.DropDownList("TIPO_PRESTAMO", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TIPO_PRESTAMO, "", new { @class = "text-danger" })
                            <span class="error">El tipo de prestamo es requerido</span>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ANTIGUEDAD_MINIMA, "Antiguedad Minima", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.ANTIGUEDAD_MINIMA, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ANTIGUEDAD_MINIMA, "", new { @class = "text-danger" })
                            <span class="error">La Antiguedad minima es requerida</span>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ANTIGUEDAD_MAXIMA, "Antiguedad Maxima", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.ANTIGUEDAD_MAXIMA, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ANTIGUEDAD_MAXIMA, "", new { @class = "text-danger" })
                            <span class="error">La Antiguedad maxima es requerida</span>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PLAZO_MINIMO, "Plazo Minimo", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.PLAZO_MINIMO, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PLAZO_MINIMO, "", new { @class = "text-danger" })
                            <span class="error">El plazo minimo es requerido</span>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PLAZO_MAXIMO, "Plazo Maximo", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.PLAZO_MAXIMO, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PLAZO_MAXIMO, "", new { @class = "text-danger" })
                            <span class="error">El plazo maximo es requerido</span>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.INTERES, "Interes", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.INTERES, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.INTERES, "", new { @class = "text-danger" })
                            <span class="error">El interes es requerido</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input id="submit" type="button" value="Guardar" style="padding:10px 20px" />|@Html.ActionLink("Atrás", "Index")
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>





@section Scripts {
    <script>

        $(document).ready(function () {
            //Save button click function
            $('#submit').click(function () {
                //validation of order
                var isAllValid = true;

                if ($('#TIPO_PRESTAMO').val().trim() == '') {
                    isAllValid = false;
                    $('#TIPO_PRESTAMO').siblings('span.error').css('visibility', 'visible');
                }
                else {
                    $('#TIPO_PRESTAMO').siblings('span.error').css('visibility', 'hidden');
                }

                if ($('#ANTIGUEDAD_MINIMA').val().trim() == '') {
                    isAllValid = false;
                    $('#ANTIGUEDAD_MINIMA').siblings('span.error').css('visibility', 'visible');
                }
                else {
                    $('#ANTIGUEDAD_MINIMA').siblings('span.error').css('visibility', 'hidden');
                }

                if ($('#PLAZO_MINIMO').val().trim() == '') {
                    isAllValid = false;
                    $('#PLAZO_MINIMO').siblings('span.error').css('visibility', 'visible');
                }
                else {
                    $('#PLAZO_MINIMO').siblings('span.error').css('visibility', 'hidden');
                }


                if ($('#INTERES').val().trim() == '') {
                    isAllValid = false;
                    $('#INTERES').siblings('span.error').css('visibility', 'visible');
                }
                else {
                    $('#INTERES').siblings('span.error').css('visibility', 'hidden');
                }


                //Save if valid
                if (isAllValid) {
                    var data = {
                        TIPO_PRESTAMO: $('#TIPO_PRESTAMO').val().trim(),
                        ANTIGUEDAD_MINIMA: $('#ANTIGUEDAD_MINIMA').val().trim(),
                        PLAZO_MINIMO: $('#PLAZO_MINIMO').val().trim(),
                        INTERES: $('#INTERES').val().trim(),
                        ID: $('#ID').val().trim(),
                        FECHA_CREACION: $('#FECHA_CREACION').val().trim(),
                        USUARIO_CREACION: $('#USUARIO_CREACION').val().trim()

                    }

                    $(this).val('Procesando...');

                    $.ajax({
                        url: '/Prestamo_Config/Edit',
                        type: "POST",
                        data: JSON.stringify(data),
                        dataType: "JSON",
                        contentType: "application/json",
                        success: function (d) {
                            //check is successfully save to database
                            if (d.status == true) {
                                //will send status from server side
                                Swal.fire({
                                    position: 'center',
                                    type: 'success',
                                    title: 'Se modificaron los datos',
                                    showConfirmButton: true

                                }).then((result) => {
                                    if (result.value) {
                                        window.location.href = '/Prestamo_Config/Index';

                                    }
                                })

                            }
                            else {
                                Swal.fire({
                                    type: 'error',
                                    title: 'Error!',
                                    text: d.messageerror,
                                    footer: ''
                                })

                            }
                            $('#submit').val('Guardar');
                        },
                        error: function () {
                            Swal.fire({
                                type: 'error',
                                title: 'Error!',
                                text: 'Intente Nuevamente.',
                                footer: ''
                            })
                            //alert('Error. Intente Nuevamente.');
                            $('#submit').val('Guardar');
                        }
                    });
                }

            });

        });


    </script>
}
<style>
    /*Adding some css for looks good*/
    span.error {
        display: block;
        visibility: hidden;
        color: red;
        font-size: 90%;
    }


    /*css for table*/
    .container td {
        vertical-align: top;
    }

    .tablecontainer table {
        width: 80%;
        border-collapse: collapse;
        border-top: 1px solid #BFAEAE;
