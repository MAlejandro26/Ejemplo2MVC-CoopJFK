@model IEnumerable<CoopJFK.Models.RoleViewModel>

@{
    ViewBag.Title = "Roles";
}
<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">@ViewBag.Title</h4>
    </div>
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <ol class="breadcrumb">
            <li><a href="#">Sistema de Gestión de Crédito</a></li>
            <li>Administracion</li>
            <li class="active">Roles</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-md-12">
        <div class="white-box">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <table class="table" id="jqueryTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    Rol
                                </th>
                                @*<th>Accion</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    @*<td>
                                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Detalle", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                                        </td>*@
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                   Rol
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    @GridTemplate.GridMVCTemplate("Role")
}

